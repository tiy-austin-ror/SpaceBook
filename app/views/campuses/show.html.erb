<div class='row pending-events-display'>
  <div class='col-sm-8 col-sm-offset-1'>
    <h3 class="campus-header">
      <strong>Campus:</strong>
      <%= @campus.name %>
    </h3>
  </div>
  <div class='col-sm-2 col-sm-offset-1'>
    <%= attachment_image_tag(@campus, :profile_image, :fill, 150, 150, format: "jpg", fallback: 'campus.jpg', class:"camp-picture") %>
  </div>
</div>
  <div class="pull-right">
      <%= link_to 'Create New Room', new_campus_room_path(@campus) %>
  </div>
<% @rooms.each_slice(2) do |rooms| %>
  <div class="row">
    <div class='col-sm-12'>
      <% rooms.each_with_index do |room, index| %>
        <div class="pending-events-display campus-room col-sm-5 col-sm-offset-<%= 2 if index == 1 %>">
          <h3 id="room-name"><%= link_to room.name, campus_room_path(@campus, room) %></h3>
          <%= attachment_image_tag(room, :profile_image, :fill, 150, 150, format: "jpg", fallback: 'room.jpg', class:"camp-picture") %>
          <div class="row campus-description-padding">
            <div class="col-sm-6">
              <%= room.location %>
            </div>
            <div class="col-sm-6">
              <p>capacity <%= room.capacity %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <p><%= room.events_count %> Events</p>
            </div>
            <div class="col-sm-6">
              <p>Avg Use <%= room.average_capacity_use %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class='row'>
  <%= link_to 'Back', campuses_path %>
</div>
