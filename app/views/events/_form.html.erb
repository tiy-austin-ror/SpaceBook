

<div class='col-md-offset-2 col-md-6'>
  <%= form_for([@campus, @room, @event]) do |f| %>

      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %><br>

      <%= react_component('PrivateEvent') %>

      <%= f.label :start_time %><br>
      <%= f.datetime_select :start_time, ampm: true, minute_step: 15 %><br>

      <%= f.label "Duration" %><br>
      <%= f.select :duration, time_array %> <br>

      <%= f.label :description %><br>
      <%= f.text_field :description, class: "form-control" %><br>


      <%= f.label :agenda %><br>
      <%= f.text_field :agenda, class: "form-control" %><br>

      <%= f.label :allow_remote, "Allow remote attendance?" %>
      <%= f.check_box :allow_remote %>

      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
  <% end %>
</div>
