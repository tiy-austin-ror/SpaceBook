<h1>Listing Events</h1>
<div class="table-responsive"></div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Start time</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Room</th>
        <th>User</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= link_to "#{event.name}", campus_room_event_path(event.campus, event.room, event), class: "table-link" %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.description %></td>
        <td><%= event.room.name %></td>
        <td><%= event.user.username %></td>
        <td><%= link_to 'Edit Event Details', edit_campus_room_event_path(event.campus, event.room, event), class: "btn btn-default" %></td>
        <td><%= link_to 'Delete Event', campus_room_event_path(event.campus, event.room, event), class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
       <% end %>
      </tr>
    </tbody>

</div>
