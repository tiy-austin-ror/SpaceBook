<!DOCTYPE html>
<html>
<head>
  <title>Spacebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class='navbar navbar-default navbar-fixed-top'>
    <div class="container-fluid">
      <%= link_to "SpaceBook", root_path, class: "navbar-brand" %>
          <ul class="nav navbar-nav navbar pull-right">
            <% if signed_in? %>

              <li> <%= link_to "Rooms", campus_rooms_path(current_user.campus), class: "nav-link" %> </li>
              <li> <%= link_to "Events", campus_path(current_user.campus), class: "nav-link" %> </li>
              <li> <%= link_to 'Sign out', sign_out_path, method: :delete, class: "nav-link" %> </li>
            <% else %>
              <li> <%= link_to "Sign In", sign_in_path, class: "nav-link" %> </li>
              <li> <%= link_to "Sign Up", new_user_path, class: "nav-link" %> </li>
            <% end %>
          </ul>
      </div>
    </nav>

  <div class="container">

   <% flash.each do |message_type, message| %>
     <div class="alert alert-<%= message_type%>" id = "flash">
       <%= message %>
     </div>
   <% end %>

  <%= yield %>

  </div>
  <footer>
    <div id="footnotes_holder"></div>
  </footer>
</body>
</html>
